{
    "name": "grouphug/grouphug",
    "type": "project",
    "description": "Simple web frontend for the GroupHug server",
    "license": "MIT",
    "require": {
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "slim/slim": "^4.13",
        "slim/twig-view": "^3.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.53",
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "lint": "@php vendor/bin/php-cs-fixer fix -v",
        "serve": "@php -S 127.0.0.1:8080 -t web cli-index.php"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
